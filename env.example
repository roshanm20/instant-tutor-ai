# AI EdTech MVP - Environment Configuration
# Environment variables and configuration settings

# Database Configuration
DATABASE_URL=postgresql://edtech_user:secure_password@localhost:5432/edtech_mvp
REDIS_URL=redis://localhost:6379

# Vector Database Configuration (Choose one)
# Option 1: Weaviate (Recommended for MVP)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=  # Leave empty for local deployment

# Option 2: Pinecone (For production scale)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=gcp-starter

# AI Services Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
DEBUG=True
SECRET_KEY=your_super_secret_key_for_jwt_tokens
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Storage Configuration
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=500MB
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,wmv

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/edtech_mvp.log

# Performance Settings
MAX_CONCURRENT_UPLOADS=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_SEARCH_RESULTS=10

# Kerala Specific Settings
DEFAULT_LANGUAGE=english
SUPPORTED_LANGUAGES=english,malayalam,hindi
TIMEZONE=Asia/Kolkata

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Monitoring and Analytics
ENABLE_ANALYTICS=True
ANALYTICS_RETENTION_DAYS=90

# Security Settings
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000